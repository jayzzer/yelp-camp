<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
    
    <div id="campgrounds" class="row text-center">
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>" alt="campground"></img>
                    <div class="caption"><%= campground.name %></div>
                    <p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More info</a>
                    </p>
                </div>
            </div>
        <% }); %>
        <% if (campgrounds == false) { %>
            <div class="col-md-12">
                <div class="text-center">
                    <h1>No campgrounds match that query, please try again!</h1>
                    <a href="/campgrounds" class="btn btn-lg btn-success">View all campgrounds</a>
                </div>
            </div>
        <% } %>
    </div>
</div>

<% include ../partials/footer %>